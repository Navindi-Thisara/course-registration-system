<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.crs.controller.CourseController">
    <center>
        <TableView fx:id="courseTable" prefHeight="300" prefWidth="600">
            <columns>
                <TableColumn text="ID" />
                <TableColumn text="Title" />
                <TableColumn text="Department" />
            </columns>
        </TableView>
    </center>
    <bottom>
        <HBox spacing="10" alignment="CENTER">
            <Button text="Add" onAction="#addCourse"/>
            <Button text="Update" onAction="#updateCourse"/>
            <Button text="Delete" onAction="#deleteCourse"/>
        </HBox>
    </bottom>
</BorderPane>
